                <thead class="table-success">
                    <tr>
                        <th scope="col">Acr√≥nimo</th>
                        <th scope="col">Nombre</th>
                    </tr>
                </thead>
                <tbody>
                    <form action="index.php" method="POST">
                        {% for vacuna in lista_pendientes %}
                            <tr>
