{% extends 'inicio_logueado.twig' %}

{% block content %}
    {% if lista != "False" %}
        {% if n_peticiones > 0 %}
            <table class="table">
                <thead class="table-success">
                    <tr>
                        <th>Foto de perfil</th>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Procesar petici√≥n</th>
                    </tr>
                </thead>
                <tbody>
                    <form action="index.php" method="POST">
                        {% for usuario in peticiones %}
                            <tr>
                                <td><img height="100px" width="100px" src="data:image;base64,{{usuario.Fotografia}}"/></td>
                                <td>{{usuario.Nombre}} {{usuario.Apellidos}}</td>
                                <td>{{usuario.Email}}</td>
                                <td><button class="btn btn-success" name="idProcesarPeticion" value="{{usuario.DNI}}"><i class="bi bi-check2"></i></button></td>
                            </tr>
                        {% endfor %}
                    </form>
                </tbody>
            </table>
        {% else %}
            <h2>No hay peticiones pendientes.</h2>
        {% endif %}
    {% endif %}
{% endblock %}