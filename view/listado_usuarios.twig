{% extends 'index_view.twig' %}

{% block content %}
    {% if boton_accion == "listadoUsuarios" %}
    <div class="filtro_usuarios">
        <form action="index.php">
            <input type="text" placeholder="Buscar..." name="search">
            <!-- Falta de ordenacion por rango de edad -->-->
            <input type="checkbox" id="activo" name="activo" value="activo">
            <label for="activo">Activo</label>
            <input type="checkbox" id="inactivo" name="inactivo" value="inactivo">
            <label for="inactivo">Inactivo</label>
            <input type="checkbox" id="pendiente" name="pendiente" value="vacunas_pendientes">
            <label for="Activo">Vacunas Pendientes</label>
            <label for="VacunaXSemanasInput" class="form-label">Vacunarse en:</label>
            <input type="number" id="VacunaXSemanasInput" placeholder="Semanas" name="vacuna_x_semanas">
        </form>
        
    </div>
    {% endif %}
    <div class = "listado_usuarios">    
            {% if boton_accion == "listadoUsuarios" %}
                {{lista_usuarios()}}
            {% else %}
                {{lista_peticiones()}}
            {% endif %}
    </div>
{% endblock %}

{% block login %}
    <h2 class="w-hdos">¡BIENVENIDO/A {{nombre_user}}! </h2>
    <img height="150px" width="150px" src="data:image;base64,{{ image_user }}" />
    <div class="w-button-register">
        <form action="index.php" method="POST">
            {% if rol_user == "Admin" %} 
                <button name="regist" class="form-button">Registrar Usuario</button>
                <button name="regist-vac" class="form-button">Registrar Vacuna</button> 
            {% endif %}
            <button name="editar-me" class="form-button">Editar Perfil</button>
            <button name="log-out" class="form-button">Cerrar Sesión</button>
        </form>
    </div>
{% endblock %}