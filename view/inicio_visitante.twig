{% block login %}
    <section class="widget">
        <div class="bg-success">
            <p class="titulo-asides">Iniciar sesión</p>
        </div>
    
        <div>
            <form class="login-form" action="index.php" method="POST">
                <div class="mb-3">
                    <input type="text" name="usr" class="form-control" placeholder="DNI" id="loginUserInput"/>
                </div>
                <div class="mb-3"> 
                    <input type="password" name="psw" class="form-control" placeholder="Contraseña" id="loginPassInput"/>
                </div>
                    <input type="hidden" name="logueado" value="True"/>
                    <button class="btn btn-success" name="boton-login-visitante" type="submit">Iniciar Sesión</button>
            </form>
        </div>
    </section>
    <section class="widget">
        <div class="bg-success">
            <p class="titulo-asides">Registro</p>
        </div>
        <div>
            <form class="login-form" action='index.php' method="POST">
                <p>¿Aún no tienes cuenta?</p>
                <button class="btn btn-success" name="registrar-visitante" type="submit">Regístrate</button>
            </form>
        </div>
    </section>
{% endblock %}